@{
    var list = Session["myCart"] as List<ProjectFinal.Models.ProductOrderModel>;

}

<div class="cart_detail">
    <div class="container">
        <h4 class="title_cart">GIỎ HÀNG CỦA BẠN</h4>
        
        <table class="table table-hover ">
            <tbody>
                @if (Session["myCart"] != null)
                { double total = 0;
                    
                    foreach (var item in list)
                    {
                        total += item.PriceOut * (100 - item.Discount) / 100 * item.Quantity;
                        var price = item.PriceOut * (100 - item.Discount) / 100;
                        <tr>
                            <td>
                                <img src="@item.IconImg" style="width:50px;height:50px;" />
                            </td>
                            <td>@item.ProductName</td>
                            <td>
                                <div class="fs-ghltd fs-ghplus">
                                    <div class="fs-ghpltb clearfix">
                                        <span class="fsghbtn" id="btnsub"><i>-</i></span>
                                        <input class="fs-ghplip" id="total" type="text" readonly="readonly" value="@item.Quantity" placeholder="0">
                                        <span class="fsghbtn" id="btnadd">+</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                            @price.ToString("#,###").Replace(",", ".")₫</td>
                            <td>
                                <a ng-click="deleteCart(@item.ProductId)"><i class="fa fa-times" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3">
                            <h5 style="text-align:right;font-weight:bold">Thành Tiền:</h5>
                        </td>
                        <td colspan="2">
                            <h4 style="color:red;text-align:left">@total.ToString("#,###").Replace(",", ".")₫</h4>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="btn btn-primary btn-block">Đặt Hàng</button>
    </div>
</div>
