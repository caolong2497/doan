<div class="container" >
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Thay Đổi Mật Khẩu</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <span class="text-danger">{{error_Pass}}</span><br />
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>Old Password:</td>
                                        <td><input type="password" class="form-control" ng-model="oldPassword" placeholder="Old Password"></td>
                                    </tr>
                                    <tr>
                                        <td>New Password</td>
                                        <td><input type="password" class="form-control" ng-model="newPassword" placeholder="New Password"></td>
                                    </tr>
                                    <tr>
                                        <td>Password Confirm</td>
                                        <td><input type="password" class="form-control" ng-model="newPasswordConfirm" placeholder="Password Confirm"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <span class="pull-right">
                        <a ng-click="changePassword()" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-ok"></i></a>
                    </span>
                </div>

            </div>
        </div>
    </div>
</div>
